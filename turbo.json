{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", "!**/*.stories.{tsx,jsx,mdx}"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "build:storybook": {},
    "dev": {
      "persistent": true,
      "cache": false
    },
    "compile": {
      "cache": false
    },
    "format": {
      "cache": false
    },
    "lint": {
      "cache": false
    },
    "storybook": {
      "persistent": true,
      "cache": false
    }
  }
}
