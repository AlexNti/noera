{
  "name": "@noera/ui",
  "version": "0.1.0",
  "description": "UI component library for Noera",
  "keywords": [
    "ui",
    "components",
    "react",
    "tailwind"
  ],
  "license": "MIT",
  "author": "",
  "exports": {
    "./card": {
      "types": "./dist/card.d.ts",
      "import": "./dist/card.mjs",
      "require": "./dist/card.js"
    },
    "./theme.css": "./dist/theme.css"
  },
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "analyze": "npx tailwindcss --input ./src/theme.css --output ./dist/theme.css --report",
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@base-ui-components/react": "^1.0.0-beta.2",
    "tailwind-merge": "^3.3.1",
    "tailwind-variants": "^2.0.1"
  },
  "devDependencies": {
    "@noera/eslint-config": "workspace:*",
    "@tailwindcss/postcss": "^4",
    "@tailwindcss/vite": "^4.1.11",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "postcss": "^8.5.6",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwindcss": "^4.1.11",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  }
}
